<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Room Types List View -->
    <record model="ir.ui.view" id="view_hotel_roomtypes_list"> 
        <field name="name">Room Types Master List</field>
        <field name="model">hotel.roomtypes</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
                <field name="daily_charge"/>
                <field name="additional_charges"/>
            </tree>
        </field>
    </record>

    <!-- Room Types Form View with Notebook and Master-Detail Tree -->
    <record model="ir.ui.view" id="view_hotel_roomtypes_form"> 
        <field name="name">Hotel Room Types</field>
        <field name="model">hotel.roomtypes</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>

                    <!-- Notebook widget with three tabs -->
                    <notebook>
                        <!-- Daily Charges Tab -->
                        <page string="Daily Charges">
                            <group>
                                <field name="daily_charge"/>
                                <field name="additional_charges"/>
                            </group>
                        </page>

                        <!-- Images Tab -->
                        <page string="Images">
                            <group>
                                <field name="photo_bed" widget="image"/>
                                <field name="photo_restroom" widget="image"/>
                            </group>
                        </page>

                        <!-- Master-Detail Tree Tab: Rooms -->
                        <page string="Rooms">
                            <field name="room_id">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="description"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Room Types Action -->
    <record model="ir.actions.act_window" id="action_hotel_roomtypes"> 
        <field name="name">Hotel Room Types</field>
        <field name="res_model">hotel.roomtypes</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Room Types Menu -->
    <menuitem 
        name="Room Types"
        id="menu_hotel_roomtypes"
        parent="menu_hotel_masterlists"
        action="action_hotel_roomtypes"
        sequence="10"
    />
</odoo>
